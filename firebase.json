{
  "hosting": {
    "public": "build",
    "rewrites": [
      {
        "source": "/images/**",
        "function": "images"
      },
      {
        "source": "/sitemap.txt",
        "function": "sitemap"
      },
      {
        "source": "*",
        "destination": "index.html"
      }
    ],
    "headers": [
      {
        "source": "/service-worker.js",
        "headers": [{ "key": "Cache-Control", "value": "no-store" }]
      },
      {
        "source": "/index.html",
        "headers": [{ "key": "Cache-Control", "value": "no-store" }]
      }
    ]
  }
}
